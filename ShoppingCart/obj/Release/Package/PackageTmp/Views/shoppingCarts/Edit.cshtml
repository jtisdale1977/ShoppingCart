@model ShoppingCart.Models.shoppingCart

<body>
    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Edit Cart</h2>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Page title area -->

    @using (Html.BeginForm("Edit", "shoppingCarts", FormMethod.Post, new { enctype = "Multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 align="center">How many would you like?</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ItemId)
            @Html.HiddenFor(model => model.CustomerId)
            @Html.HiddenFor(model => model.MediaURL )
            @Html.HiddenFor(model => model.Price)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    <b><span>@Html.DisplayFor(modelItem => Model.Name)</span></b>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Count, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-1">
                    @Html.EditorFor(model => model.Count, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreationDate, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    <b><span>@Html.DisplayFor(modelItem => Model.CreationDate)</span></b>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-5">
                    <p align="right"><b>Item Image</b></p>
                </div>
                <div class="col-md-7">
                    @if (Model.MediaURL != null)
                    {
                        <img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="@Url.Content(Model.MediaURL)" />
                    }
                </div>
            </div>

            <div class="form-group" align="center">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <a href="@Url.Action("Index", "shoppingCarts")" id="play" class="btn btn-default" role="button">Back To Cart</a>
                </div>
            </div>
        </div>
    }
 </body>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
