@model ShoppingCart.Models.shoppingCart

<body>
    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Delete Item</h2>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Page title area -->

        <div class="form-horizontal">
            <h2 align="center">Are you sure you want to delete this item?</h2>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    <b><span>@Html.DisplayFor(modelItem => Model.Name)</span></b>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    <b><span>@Html.DisplayFor(modelItem => Model.Price)</span></b>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Count, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                  @Html.DisplayFor(model => model.Count)  
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreationDate, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    <b><span>@Html.DisplayFor(modelItem => Model.CreationDate)</span></b>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-5">
                    <p align="right"><b>Item Image</b></p>
                </div>
                <div class="col-md-7">
                    @if (Model.MediaURL != null)
                    {
                        <img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="@Url.Content(Model.MediaURL)" />
                    }
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <div class="col-md-offset-5 col-md-7">
                        <input type="submit" value="Delete" class="btn btn-default" />
                        <a href="@Url.Action("Index", "shoppingCarts")" id="play" class="btn btn-default" role="button">Back To Cart</a>
                    </div>
                </div>
            }
        </div>
    }
 </body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}